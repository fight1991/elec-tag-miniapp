.outer {
  position: relative;
}
.user-bg {
  box-sizing: border-box;
  height: 200rpx;
  box-shadow: 0px 2px 16px rgba(118, 182, 255, 0.25);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  display: flex;
  position: relative;
  z-index: 2;
  background-color: #fff;
  align-items: center;
}
.user-line {
  padding: 10rpx;
}
.user-right {
  height: 120rpx;
  width: 120rpx;
  padding: 4rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 0 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-right .img {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.user-left {
  height: 120rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 10px;
}
.user-left .id-card {
  display: flex;
  padding-top: 10rpx;
}
.no-verify-item {
  padding: 2rpx 10rpx;
  border: 1px solid #447FFF;
  color: #447FFF;
  border-radius: 6rpx;
  display: inline-block;
}
.show-item {
  display: flex;
  align-items: center;
  font-size: 20rpx;
}
.verify-name {
  margin-right: 40rpx;
}

.change-tab {
  margin: 30rpx 0;
  border-radius: 10rpx;
  padding: 0 15rpx;
  background-color: #fff;
}
.login-out {
  margin: 70rpx 0 30rpx 0;
  padding: 0 15rpx;
}
.tab-item {
  padding: 20rpx 0 20rpx 20rpx;
  /* box-shadow: 2px 2px 4px 1px #ccc; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}
.tab-item.boderNone {
  border: none;
}
.head {
  display: flex;
  align-items: center;
}
.head-text {
  padding: 0 20rpx;
}
.arrow-r {
  font-size: 12px;
  color: #666;
}
.tab-top {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px solid #f5f5f5;
  padding: 30rpx;
}
.notice-num {
  margin-right: 38rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #ff7e37;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
}


