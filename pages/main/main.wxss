/* pages/main/main.wxss */
page {
  height: 100%;
}
.card-show-box {
  position: relative;
  z-index: 2;
  padding-top: 180rpx;
}
.linear-box {
  height: 100%;
  overflow-y: scroll;
  /* background:linear-gradient(to bottom, #3E77FF, #f0f7ff 30%); */
  position: relative;
}
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}
.image {
  width: 100%;
}
.group-btn {
  display: flex;
  margin: 30rpx 0;
  justify-content: space-between;
}
.group-btn-item {
  width: 210rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  color: #fff;
  position: relative;
  justify-content: space-between;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}
.free-apply {
  position: absolute;
  right: -10rpx;
  top: -15rpx;
  font-size: 18rpx;
  height: 30rpx;
  width: 100rpx;
  text-align: center;
  line-height: 30rpx;
  background-color: #FD8141;
  border-radius: 15rpx;
}
.group-btn-item:nth-child(1) {
  background: linear-gradient(92deg, #A899FF 0%, #CBC2FF 100%);
  box-shadow: 0px 6px 30px rgba(172, 161, 240, 0.42);
}
.group-btn-item:nth-child(2) {
  background: linear-gradient(92deg, #FF8DA9 0%, #FFC3B7 100%);
  box-shadow: 0px 6px 30px rgba(254, 152, 176, 0.42);
}
.group-btn-item:nth-child(3) {
  background: linear-gradient(92deg, #FEBE5A 0%, #FEBE5A 0%, #FCD8A1 100%);
  box-shadow: 0px 6px 30px rgba(245, 198, 124, 0.42);
}
.recommend-point {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 10rpx 20rpx;
}
.recommend-point {
  color: #2E2E2E;
}
.recommend-point .right {
  color: #666;
}
.point-place {
  text-align: center;
  color: #ccc;
  margin-top: 100rpx;
}