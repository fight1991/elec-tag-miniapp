/* pages/components/confirmDialog/confirmDialog.wxss */
.box {
  box-sizing: border-box;
  position: relative;
  background-color: #fff;
  text-align: center;
  padding: 168rpx 34rpx 34rpx 34rpx;
  border-radius: 10rpx;
  width: 600rpx;
  height: 472rpx;
}
.btns {
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  font-size: 32rpx;
}
.common {
  border-radius: 8rpx;
  height: 80rpx;
  width: 48%;
}
.cancel {
  margin-right: 10px;
  background-color: #f5f5f5;
  color: #666;
  
}
.confirm {
  margin-left: 10px;
  background-color: #3E77FF;
  color: #fff;
}
.top {
  color: #FFFFFF;
  font-size: 32rpx;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -315rpx;
  width: 630rpx;
  height: 120rpx;
  background-size: 100% 100%;
}
.content {
  color: #4D4D4D;
  font-size: 28rpx;
}