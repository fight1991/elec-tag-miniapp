/* pages/subPages/maint/components/tipDialog.wxss */
.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 630rpx;
  height: 472rpx;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.wx-dialog-header {
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -315rpx;
  width: 630rpx;
  height: 124rpx;
  background-size: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  z-index: 5001;
}
.wx-dialog-content {
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -300rpx;
  color: #4D4D4D;
  font-size: 28rpx;
  box-sizing: border-box;
  width: 600rpx;
  height: 100%;
  padding: 168rpx 34rpx 0 34rpx;
  border-radius: 12rpx;
  background-color: #fff;
  z-index: 5000;
}
.btns {
  margin-top: 46rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  font-size: 32rpx;
}
.common {
  border-radius: 8rpx;
  height: 80rpx;
  width: 48%;
}
.cancel {
  background-color: #F2F2F2;
  color: #666;
  text-align: center;
}
.confirm {
  margin-left: 27rpx;
  background-color: #5389FF;
  color: #fff;
  text-align: center;
}
.top-text {
  display: inline-block;
  margin-top: 44rpx;
}
.pl-36 {
  padding: 0 0 8rpx 36rpx;
}