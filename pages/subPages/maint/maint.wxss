/* pages/subPages/wash/wash.wxss */
page {
  height: 100%;
}

.box {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.banner-img {
  width: 690rpx;
  height: 200rpx;
  margin: 0 auto;
}
.img {
  width: 96rpx;
  margin: 0 auto;
  display: block;
}
.item-box {
  display: flex;
  text-align: center;
  padding: 30rpx 0;
  width: 100%;
  overflow-x: auto;
}
.ad-box {
  padding: 30rpx 0;
}
.item {
  width: 25%;
}
.img-text {
  font-size: 24rpx;
  padding: 10rpx 0;
  transition: all .5s;
}
.content-box {
  padding: 20rpx 0;
  flex: 1;
  overflow: hidden;
}
.card-item {
  margin: 0 20rpx 20rpx;
}
.active {
  color: #447fff;
  font-weight: bold;
}