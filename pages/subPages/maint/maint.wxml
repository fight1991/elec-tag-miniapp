<!--pages/subPages/wash/wash.wxml-->
<view class="box">
  <!-- 头部洗车组件 -->
  <view class="item-box" wx:if="{{pageFlag=='wash'}}">
    <view class="item">
      <image class="img" mode="widthFix" src="/pages/image/businessCircle/standard-wash.png"></image>
      <text class="img-text">标准洗车</text>
    </view>
    <view class="item">
      <image class="img" mode="widthFix" src="/pages/image/businessCircle/full-wash.png"></image>
      <text class="img-text">全车精洗</text>
    </view>
    <view class="item">
      <image class="img" mode="widthFix" src="/pages/image/businessCircle/inside-wash.png"></image>
      <text class="img-text">内饰精洗</text>
    </view>
    <view class="item">
      <image class="img" mode="widthFix" src="/pages/image/businessCircle/beauty-wash.png"></image>
      <text class="img-text">打蜡美容</text>
    </view>
  </view>
  <!-- 头部维修保养组件 -->
  <view class="item-box" wx:if="{{pageFlag=='maint'}}">
    <image class="banner-img" mode="widthFix" src="/pages/image/businessCircle/maint-banner.png"></image>
  </view>
  <!-- 筛选项区域 -->
  <view class="drop-down">
    <van-dropdown-menu active-color="#447fff">
      <van-dropdown-item bind:change="selectBtn" model:value="{{ distance }}" options="{{ distanceOption }}" />
      <van-dropdown-item bind:change="selectBtn" model:value="{{ other }}" options="{{ otherOption }}">
      </van-dropdown-item>
    </van-dropdown-menu>
  </view>
  <!-- 内容区域 -->
  <view class="content-box">
    <pull-refresh
      height="100%"
      model:count="{{list.length}}"
      model:hasMore="{{hasMore}}"
      bind:pullDown="initList"
      bind:reachBottom="upperList"
      model:isRefresh="{{collapse}}">
      <view class="card-item" wx:for="{{list}}" wx:key="goodsId">
        <navigator url="./shopInfo?goodsId={{item.goodsId}}&orgId={{item.orgId}}&pageFlag={{pageFlag}}">
          <van-card
            custom-class="bg-f"
            price="{{item.discountPrice}}"
            origin-price="门市{{item.price}}"
            desc="{{item.address}}"
            title="{{item.orgName}}"
            thumb="{{item.urlIcon}}">
            <view slot="footer">
              <view class="foot-box">
                <view
                  style="padding-right:10rpx;"
                  wx:for="{{item.orgServices}}"
                  wx:key="item">
                  <van-tag plain type="primary">{{serviceText[item]}}</van-tag>
                </view>
                <text>{{item.goodsName || '-'}}</text>
              </view> 
            </view>
            <view slot="tags" style="display:flex">
              <view
                style="padding-right:10rpx;"
                wx:for="{{item.orgTags}}"
                wx:key="item">
                <van-tag plain type="primary">{{tagText[item]}}</van-tag>
              </view>
            </view>
          </van-card>
        </navigator>
      </view>
    </pull-refresh>
  </view>
</view>
