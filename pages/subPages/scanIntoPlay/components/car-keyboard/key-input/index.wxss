.car-plate {
  display: flex;
  justify-content: center;
}
.car-plate-item {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 68rpx;
  height: 68rpx;
  font-size: 36rpx;
  text-align: center;
  border:1px solid #E5E5E5;
  border-radius: 6rpx;
  color: #447FFF;
  margin-right: 14rpx;
  font-weight: bolder;
}
.car-plate-item:last-child {
  position: relative;
}
.car-plate-item:last-child::before {
  content: 'æ–°';
  position: absolute;
  top: -28rpx;
  left: -2rpx;
  width: 68rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  background: #66cd00;
  color: #fff;
  border-radius: 2rpx
}
.active {
  border-color: #447FFF;
}