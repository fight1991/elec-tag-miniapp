.car-plate {
  display:flex;
  justify-content:center;
}
.car-plate-item {
  box-sizing:border-box;
  width:34px;
  height:34px;
  line-height:34px;
  font-size:18px;
  text-align:center;
  border:1px solid #E5E5E5;
  border-radius: 3px;
  color:#447FFF;
  margin-right:7px;
  font-weight: bolder;
}
.car-plate-item:last-child {
  position:relative;
}
.car-plate-item:last-child::before {
  content:'æ–°';
  position:absolute;
  top:-14px;
  left:-1px;
  width:34px;
  height:14px;
  line-height:14px;
  font-size:10px;
  background:#66cd00;
  color:#fff;
  border-radius:1px
}
.active {
  border-color:#447FFF;
}