<!--pages/subPages/order/order.wxml-->
<view>
  <view class="tab-box">
    <van-tabs color="#447fff" sticky swipeable animated active="{{ activeTab }}" bind:change="tabChange">
      <van-tab wx:key="index" wx:for="{{tabs}}" title="{{item.title}}">
        <view class="content-box">
          <view class="card-item" wx:for="{{list}}" wx:key="index">
            <van-cell-group inset>
              <van-cell title="{{index}}">
                <text class="waitpay">待支付</text>
              </van-cell>
              <van-cell border="{{false}}" title="苏B93k32">
                <text class="waitpay">¥300</text>
              </van-cell>
              <van-cell border="{{false}}" title="加油" value="创建时间: {{'2012.03.03 00:00:00'}}"/>
              <van-cell>
                <!-- <van-tag plain type="primary">标签</van-tag> -->
                <van-button size="small" plain type="info">朴素按钮</van-button>
              </van-cell>
            </van-cell-group>
          </view>
          <view class="has-more" wx:if="{{list.length > 0}}">{{hasMore ? '上拉加载更多' : '~到底啦~'}}</view>
          <view wx:else>
            <nodata>暂无数据</nodata>
          </view>
        </view>
      </van-tab>
    </van-tabs>
  </view>
</view>
