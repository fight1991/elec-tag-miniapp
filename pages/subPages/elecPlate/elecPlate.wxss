/* pages/elecPlate/elecPlate.wxss */
.top-title {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx 10rpx;
  font-size: 24rpx;
  color: #FF7E37;
}
.box-status {
  padding-top: 30rpx;
}
.right-title {
  width: 160rpx;
  color: #3C79FF;
}
.left-title {
  flex: 1;
  color: #04CFC6;
}


.info-box {
  padding: 0 30rpx;
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.base-box {
  margin: 0 30rpx;
}
.info-item {
  display: flex;
  padding: 30rpx 10rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}
.info-right {
  color: #808080;
}
.upload {
  color: #76A0FF;
}
.tips {
  color: #A6A6A6;
  margin: 20rpx 30rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
}
.line-through {
  text-decoration: line-through;
}
.tab-box {
  padding-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
}
.tab-item {
  color: #3C79FF;
  text-align:center;
  padding: 10rpx 0;
  width: 240rpx;
  border: 1px solid #3C79FF;
  border-radius: 4rpx;
}
.active-tab {
  background-color: #3C79FF;
  border: none;
  color: #fff;
}