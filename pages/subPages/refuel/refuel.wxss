/* pages/subPages/refuel/refuel.wxss */
page {
  height: 100%;
}
.box {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.select-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 33.3%;
  padding: 20rpx 0;
  background-color: #fff;
}
.search-box {
  padding-top: 30rpx;
  margin: 0 30rpx;
}
.select-box {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  font-size: 26rpx;
}
.select-text {
  padding-right: 20rpx;
}
.content-box {
  flex: 1;
  /* background-color: pink; */
  position: relative;
}
.mask-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.3);
}
.select-tag {
  background-color: #fff;
  padding: 30rpx;
  display: grid;
  grid-template-columns:repeat(4, 25%);
  row-gap: 30rpx;
  place-items: center;
}