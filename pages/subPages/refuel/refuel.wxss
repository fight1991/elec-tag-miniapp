/* pages/subPages/refuel/refuel.wxss */
page {
  height: 100%;
}
.box {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.search-box {
  margin: 30rpx 30rpx 0 30rpx;
}
.inner-title {
  text-align: center;
  padding-bottom: 20rpx;
}
.wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
}
.inner-box {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  width: 65%;
  margin: 0 auto;
}

.content-box {
  flex: 1;
  /* background-color: pink; */
  position: relative;
  height: calc(100% - 50px - 152rpx);
  padding: 20rpx 0;
  box-sizing: border-box;
}

.card-item {
  margin: 0 30rpx;
}
.select-box {
  margin-top: 30rpx;
}