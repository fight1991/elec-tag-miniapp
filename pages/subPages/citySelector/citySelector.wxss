/* pages/subPages/citySelector/citySelector.wxss */
page {
  height: 100%;
  background-color: #fff;
}
.input-box {
  display: flex;
  align-items: center;
  padding: 20rpx ;
  position: absolute;
  left: 0;
  top: 0;
  box-sizing: border-box;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
}
.city-name {
  padding-right: 10rpx;
}
.search-box {
  flex: 1;
}
.box {
  padding: 110rpx 0 80rpx;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}
.scroll-box {
  height: 100%;
  overflow-y: auto;
}
.address-item {
  text-align: left;
  padding: 20rpx 0;
  margin: 0 40rpx;
  border-bottom: 1px solid #f5f5f5;
}

.address-detail {
  font-size: 24rpx;
  color: #666;
  padding-top: 10rpx;
}
.current-address {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #f5f5f5;
}
.current-detail {
  flex: 1;
}
.re-getpos {
  width: 160rpx;
  text-align: right;
  padding-left: 10rpx;
  color: #447FFF;
  display: flex;
  align-items: center;
}
.re-text {
  padding-left: 10rpx;
}
.near-place {
  padding: 20rpx 40rpx;
  font-size: 24rpx;
}