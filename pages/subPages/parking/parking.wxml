<!--pages/subPages/parking/parking.wxml-->
<view class="box">
  <map id="map"></map>
  <view class="bottom-box">
    <view class="near-top">
      <view class="left">附近<text class="car-num">5</text>个停车场</view>
      <view class="position flex-center-x"><iconfont icon="position" size="30rpx"></iconfont>海创江南</view>
      <view class="refresh">
        <iconfont icon="refresh" size="40rpx"></iconfont>
      </view>
    </view>
    <view class="near-bottom">
      <business-card
        title="停车场"
        subTitle="无心hi已hi及i99号"
        subTitleRight="489m"
        oilInfo="{{false}}">
        <iconfont slot="suffixIcon" icon="navigator" size="38rpx" color="#447fff" catchtap="navigatorBtn"></iconfont>
      </business-card>
    </view>
  </view>
  <view class="right-top">
    <view class="icon-box" bindtap="findParking">
      <image class="icon-item" mode="widthFix"  src="/pages/image/businessCircle/parking-search.png"></image>
      <text>找车位</text>
    </view>
    <view class="icon-box" bindtap="lookRecord">
      <image class="icon-item" mode="widthFix"  src="/pages/image/businessCircle/parking-record.png"></image>
      <text>停车记录</text>
    </view>
  </view>
</view>
