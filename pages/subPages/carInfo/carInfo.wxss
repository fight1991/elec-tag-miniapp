/* pages/carInfo/carInfo.wxss */
.bind-box {
  height: 258rpx;
  width: 738rpx;
  margin: 0 auto;
  /* border: 1px solid #ccc; */
  border-radius: 8px;
  /* margin-bottom: 10px; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-size: 738rpx 258rpx;
  background-repeat: no-repeat;
}
.bind-box .content {
  padding-left: 100rpx;
}
.head-title {
  padding: 10rpx 0;
}
.info-box {
  padding: 0 30rpx;
  margin: 10rpx 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.info-item {
  display: flex;
  padding: 30rpx 10rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}
.info-right {
  color: #808080;
}