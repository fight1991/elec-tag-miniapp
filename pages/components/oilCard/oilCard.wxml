<!--pages/components/oilCard/oilCard.wxml-->
<view class="box">
  <view class="head-box">
    <view class="head-img">
      <slot name="pref"></slot>
    </view>
    <view class="title-box">
      <view class="main-title title">{{title}}</view>
      <view class="sub-title title">{{subTitle}}</view>
      <view class="oil-price">
        <view class="new-price">¥{{oldPrice}}</view>
        <view class="old-price">油站 ¥{{newPrice}}</view>
      </view>
    </view>
  </view>
  <view>
    <slot name="suffix"></slot>
  </view>
</view>
