/* pages/components/bindStatus/bindStatus.wxss */
.bind-box {
  height: 210rpx;
  width: 690rpx;
  margin: 0 auto 30rpx;
  /* border: 1px solid #ccc; */
  border-radius: 8px;
  /* margin-bottom: 10px; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-size: contain;
  background-repeat: no-repeat;
  position: relative;
}
.bind-box .content {
  padding-left: 100rpx;
}
.dot-box {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.dot {
  height: 8rpx;
  border-radius: 50%;
  background-color: #666;
  width: 8rpx;
  margin: 8rpx 10rpx;
}
.head-title {
  padding: 10rpx 0;
}
.brand-status {
  color: #FF7E37;
}