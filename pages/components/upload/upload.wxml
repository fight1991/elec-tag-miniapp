<!--pages/components/upload/upload.wxml-->
<view class="btn-box">
  <view class="remove-icon" wx:if="{{closeIcon && imgSrc}}" catchtap="removeBg">
    <image src="/pages/image/remove.png" style="width:46rpx;height:46rpx;display:block"></image>
  </view>
  <view bindtap="chooseBtn" style="width:{{width}};height:{{height}}">
    <view class="upload-bg" hidden="{{imgSrc}}">
      <image mode="{{mode}}" class="image" src="{{staticSrc}}"></image>
    </view>
    <view class="upload-bg true-img" hidden="{{!imgSrc}}">
      <image mode="{{mode}}" class="image" src="{{tempSrc || imgSrc}}"></image>
    </view>
  </view>
  <view class="load-text">
    <slot></slot>
  </view> 
  <view class="load-icon">
    <slot name="icon"></slot>
  </view>
</view>
