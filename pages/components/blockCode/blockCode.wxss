}
.hide-input {
	opacity: 0;
}

.show-block {
	display: flex;
	align-items: center;
	position: relative;
	justify-content: space-between;
	z-index: 2;
	background-color: #fff;
}
.hide-input {
	position: absolute;
	width: 0;
	height: 0;
	overflow: hidden;
}
.show-item {
	padding: 30rpx;
	height: 60rpx;
	margin: 0 30rpx;
	border: 1px solid #ccc;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 8rpx;
}
.focus-line {
	width: 3px;
	height: 80%;
	background-color: #447fff;
	animation: bounce 1s infinite;
}
@keyframes bounce {
	from {
		opacity: 1;
	}
	to {
		opacity: 0;
	}
 }