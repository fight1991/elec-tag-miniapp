<!--pages/elecPlate/elecPlate.wxml-->
<view class="">
  <view class="top-title" wx:if="{{elecInfo.bindStatus == 'unbind'}}">
    您的电子车牌已解绑, 首页扫一扫可再次绑定
  </view>
  <!-- 车辆绑定状态banner区域 -->
  <view
    class="bind-box"
    style="background-image:url({{bgImg}})">
    <view class="content">
      <view class="head-title fs16">{{elecInfo.plateNo}}</view>
      <view class="head-title fs12 fc-ccc" wx:if="{{elecInfo.bindStatus == 'bind'}}">电子车牌: {{elecInfo.eviId}}</view>
      <view class="head-title fs12 fc-ccc line-through" wx:if="{{elecInfo.bindStatus == 'unbind'}}">电子车牌: {{elecInfo.eviId}}</view>
      <view class="head-title unbind" wx:if="{{elecInfo.bindStatus == 'apply'}}">未绑定</view>
    </view>
  </view>
  <!-- tab区域 -->
  <view class="tab-box" bindtap="tabClick">
    <view class="tab-item{{type == 'base' ? ' active-tab' : ''}}" data-type='base'>基础信息</view>
    <view class="tab-item{{type == 'elec' ? ' active-tab' : ''}}" data-type='elec'>电子车牌</view>
  </view>
  <view class="info-box" wx:if="{{type=='elec'}}">
    <view class="info-item">
      <view class="info-left">申领方式</view>
      <view class="info-right">{{'网点领取'}}</view>
    </view>
    <view class="info-item">
      <view class="info-left">申领时间</view>
      <view class="info-right">{{elecInfo.applyTime}}</view>
    </view>
    <view class="info-item" wx:if="{{elecInfo.bindStatus == 'bind' || elecInfo.bindStatus == 'unbind'}}">
      <view class="info-left">车辆贴卡照片</view>
      <navigator url="./uploadImg">
        <view class="info-right upload">请上传</view>
      </navigator>
    </view>
  </view>
  <view class="base-box" wx:else>
    <base-info></base-info>
  </view>
  <view class="top-title" wx:if="{{elecInfo.bindStatus == 'apply'}}">
    <view class="left-title">您可前往任意网点领取电子车牌并安装</view>
    <view class="right-title">查看网点>></view>
  </view>
  <view class="tips" wx:if="{{elecInfo.bindStatus == 'apply'}}">*请向网点工作人员出示该申领页面</view>
</view>
<fixBtn bindtap="bindBtn" wx:if="{{elecInfo.bindStatus == 'apply'}}">绑定电子车牌</fixBtn>
