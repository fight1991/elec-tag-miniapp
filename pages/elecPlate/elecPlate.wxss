/* pages/elecPlate/elecPlate.wxss */
.top-title {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx 10rpx;
  color: #FF7E37;
}
.right-title {
  width: 160rpx;
  color: #3C79FF;
}
.left-title {
  flex: 1;
  color: #04CFC6;
}
.bind-box {
  height: 258rpx;
  width: 738rpx;
  margin: 0 auto;
  /* border: 1px solid #ccc; */
  border-radius: 8px;
  /* margin-bottom: 10px; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-size: 738rpx 258rpx;
  background-repeat: no-repeat;
}
.bind-box .content {
  padding-left: 100rpx;
}
.head-title {
  padding: 10rpx 0;
}
.unbind {
  color: #FF7E37;
}
.info-box {
  padding: 0 30rpx;
  margin: 10rpx 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.info-item {
  display: flex;
  padding: 30rpx 10rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}
.info-right {
  color: #808080;
}
.upload {
  color: #76A0FF;
}
.tips {
  color: #A6A6A6;
  margin: 20rpx 30rpx;
  font-size: 24rpx;
}
.line-through {
  text-decoration: line-through;
}