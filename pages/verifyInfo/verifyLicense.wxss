/* pages/verifyInfo/verifyLicense.wxss */
.outer {
  padding-bottom: 120rpx;
}
.content {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.title {
  text-align: center;
  color: #568EFF;
  font-size: 32rpx;
  padding: 20rpx 0;
}
.color-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx 100rpx;
  border-bottom: 1px solid #f5f5f5;
}
.color-block {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  position: relative;
}
.blue {
  background-color: #568EFF;
}
.green {
  background-color: #54D58E;
}
.yellow {
  background-color: #FFB369;
}
.yellow-green {
  background: linear-gradient(to right, #FFB369 50%, #54D58E 50%);
}
.white-dot,.color-text {
  position: absolute;
}
.white-dot {
  width: 30rpx;
  height: 30rpx;
  background-color: #fff;
  border-radius: 50%;
  right: 0;
  bottom: 0;
}
.active {
  width: 20rpx;
  height: 20rpx;
  background-color: #FF7676;
  border: 6rpx solid #fff;
}
.color-text {
  bottom: -50rpx;
  width: 100%;
  text-align: center;
}
.upload-area {
  padding-top: 30rpx;
}
.license-box {
  margin-bottom: 20rpx;
}
.license-txt {
  text-align: center;
  color: #4D4D4D;
  padding: 10rpx 0;
}
.read-title {
  color: #568EFF;
  padding: 20rpx;
}
.read-tip {
  padding: 10rpx;
  color: #A6A6A6;
  background-color: #F7FBFF;
}
.input-box {
  padding: 20rpx 20rpx 0;
}